<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>{{topic.title}}</title>

	{{> LinkCssJs}}
	<style>
		.comments{
			float: left;
			
		}
		.users{
			margin-right: 15px;
			float: left;
		}
		#commetsContent{
			margin-top: 10px;
			margin-left:15px; 
			margin-bottom: calc(40px*{{commentsLength}});
			
		}
	</style>
</head>

<body id="page1">
	<div class="extra">
		<header>
			{{> header}}
		</header>


		<section id="content">
			<div class="main">
				<div class="bg-2">
					<div class="content-padding-1">
						<div class="container_12">
							<div class="wrapper">



								<div style="margin: 10px;">
									<h3 class="letter">{{topic.title}}</h3>
									<p style="font-size: large;">{{topic.description}}</p>
								</div>

								<div>
									<p style="text-align: left; margin-left:10px; font-size: medium">автор: {{author.name}}</p>
								</div>



							</div>
						</div>

						<div>
							<div>
								<h3 class="letter" style="text-align: center;">Комментарии</h3>
							</div>

							
						</div>

					<div  id="commetsContent">
							<div class="users">
								{{#each userName}}
									<p>{{this}}</p>
								{{/each}}
							</div>
							<div class="comments">
								{{#each comment}}
									<p>{{this.comment}}</p>
									{{/each}}
							</div>
						</div>



					</div>

					<script>
						function reloadPage(){
							location.reload()
						}
						if (document.cookie) {
							document.write('<div><form id="contact-form" method="post"><fieldset></label><label><textarea type="text" name="comment" placeholder="ваш комментарий" accesskey="с"></textarea><br></label></fieldset><br><input type="submit" value="отправить комментарий" style="margin-bottom: 20px; onclick="reloadPage()""></form></div>')
						}
					</script>




				</div>




			</div>



			<div class="block"></div>
		</section>
	</div>
	{{> footer}}











</body>

</html>