<!DOCTYPE html>
<html lang="en">

<head>


    <title>Моя страница</title>
    <meta charset="utf-8">
    {{> LinkCssJs}}
</head>


<body id="page5">
    <div class="extra">

        <header>
            {{> header}}
        </header>

        <section id="content">
            <div class="main">
                <div class="content-padding-2">
                    <div class="container_12">
                        <div class="wrapper">
                            <article class="grid_8">
                                <div class="padding-grid-1">

                                    <script>

                                        function getCookie(cname) {
                                            var name = cname + "=";
                                            var decodedCookie = decodeURIComponent(document.cookie);
                                            var ca = decodedCookie.split(';');
                                            for (var i = 0; i < ca.length; i++) {
                                                var c = ca[i];
                                                while (c.charAt(0) == ' ') {
                                                    c = c.substring(1);
                                                }
                                                if (c.indexOf(name) == 0) {
                                                    return c.substring(name.length, c.length);
                                                }
                                            }
                                            return "";
                                        }


                                    </script>

                                    <div>
                                        <h3 class="letter">вы вошли под именем <strong>
                                                <script>document.write(getCookie('name'))</script>
                                            </strong></h3>

                                        <h3 class="letter">ваш email: <strong>
                                                <script>document.write(getCookie('email'))</script>
                                            </strong>
                                        </h3>
                                        <h3>ваш пароль: <strong>
                                                <script>document.write(getCookie('password'))</script>
                                            </strong></h3>

                                    </div>
                                    {{#if adminAccess}}
                                    <a href="/admin">панель администратора</a>
                                    {{/if}}

                                    <div id="exit" style="text-align: center; margin-top:15px;">
                                        <input type="button" value="выйти из аккаунта" onclick="DeleteAllCookies()">


                                    </div>

                                    <script>
                                        function DeleteAllCookies() {
                                            let cookies = document.cookie.split(";");
                                            for (i = 0; i < cookies.length; i++) {
                                                let cookie = cookies[i]
                                                let eqPos = cookie.indexOf("=")
                                                let name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
                                                document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT;0"
                                                document.cookie = name + "=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT;0"
                                                window.location.href = '/auth'
                                            }
                                        }
                                    </script>







                                </div>
                            </article>

                        </div>
                    </div>
                </div>
            </div>
            <div class="block"></div>
        </section>
    </div>
    {{> footer}}
</body>

</html>